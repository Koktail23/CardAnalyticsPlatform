# ClickHouse Configuration
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_USER=analyst
CLICKHOUSE_PASSWORD=your_secure_password_here
CLICKHOUSE_DATABASE=card_analytics

# Jupyter Configuration
JUPYTER_TOKEN=your_jupyter_token_here
JUPYTER_PORT=8888

# Claude API Configuration
CLAUDE_API_KEY=YOUR_ANTHROPIC_API_KEY
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY
CLAUDE_MODEL=claude-3-5-sonnet-latest
# MCP Configuration
MCP_SERVER_URL=http://localhost:3000
MCP_API_KEY=your_mcp_key_here

# Data Paths
RAW_DATA_PATH=./data/raw
PROCESSED_DATA_PATH=./data/processed
MODELS_PATH=./models
REPORTS_PATH=./reports

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Application Settings
APP_ENV=development
DEBUG=True
BATCH_SIZE=10000
MAX_WORKERS=4

# Streamlit Configuration (optional)
STREAMLIT_PORT=8501

# Feature Store Settings
FEATURE_STORE_UPDATE_INTERVAL=3600  # in seconds
FEATURE_STORE_CACHE_TTL=86400  # in seconds

# Model Settings
MODEL_REGISTRY_PATH=./models/registry
FRAUD_THRESHOLD=0.85
ANOMALY_CONTAMINATION=0.01

# Alert Settings
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Database Backup
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30